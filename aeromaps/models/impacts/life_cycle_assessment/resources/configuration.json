{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema#",
  "title": "lca-algebraic configuration file",
  "description": "Schema for defining LCA models in configuration files.",
  "type": "object",
  "definitions": {
    "background_process": {
      "$comment": "Definition of a background process",
      "type": "object",
      "required": [
            "name"
          ],
      "properties": {
        "name": {
          "type": "string"
        },
        "loc": {
          "type": "string"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unit": {
          "type": "string"
        },
        "amount": {
          "type": [
            "string",
            "number"
          ]
        },
        "custom_attributes": {
          "$ref": "#/definitions/custom_attributes"
        },
        "update": {
          "$ref": "#/definitions/update"
        },
        "add": {
          "$ref": "#/definitions/add"
        },
        "delete": {
          "$ref": "#/definitions/delete"
        }
      }
    },
    "foreground_process": {
      "$comment": "Definition of an LCA foreground process",
      "type": "object",
      "properties": {
        "amount": {
          "type": [
            "string",
            "number"
          ]
        },
        "unit": {
          "type": "string"
        },
        "is_switch": {
          "type": "boolean"
        },
        "custom_attributes": {
          "$ref": "#/definitions/custom_attributes"
        }
      },
      "additionalProperties": {
        "anyOf": [
              {
                "$ref": "#/definitions/foreground_process"
              },
              {
                "$ref": "#/definitions/background_process"
              }
            ]
          }
      },
    "custom_attributes": {
        "$comment": "Custom attributes for the activity, for example 'phase' or 'subphase'. This is useful to split impact assessment results.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "attribute": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["attribute", "value"]
        }
      },
    "update": {
        "$comment": "Update existing exchanges with new values. New value can be either an amount, an new activity name, or a dictionary of amount and activity name.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "input_activity": {
              "type": "string"
            },
            "new_value": {
              "type": "object"
            }
          },
          "required": ["input_activity", "new_value"]
        }
      },
    "add": {
        "$comment": "Add exchanges to the activity",
        "type": "array",
        "items": {
          "anyOf": [
            {
              "$ref": "#/definitions/foreground_process"
            },
            {
              "$ref": "#/definitions/background_process"
            }
          ]
        }
      },
    "delete": {
        "$comment": "Delete exchanges for which names are provided. Names can contain wildcard '*'",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "input_activity": {
              "type": "string"
            }
          },
          "required": ["input_activity"]
        }
      },
    "model": {
      "$comment": "Definition of an LCA model",
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/definitions/foreground_process"
          },
          {
            "$ref": "#/definitions/background_process"
          }
        ]
      }
    },
    "float_or_ndarray": {
      "$comment": "Definition of value that accepts float or list of floats",
      "type": [
        "number",
        "array"
      ],
      "items": {
        "type": "number"
      }
    },
    "scenarios": {
        "$comment": "List of Premise scenarios to generate prospective databases",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "model": {
              "type": "string"
            },
            "pathway": {
              "type": "string"
            },
            "year": {
              "type": "number"
            }
          },
          "required": ["model", "pathway", "year"]
        }
    }
  },
  "properties": {
    "project": {
      "type": "string"
    },
    "ecoinvent": {
      "$comment": "Declaration of the background database ecoinvent",
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "model": {
          "type": "string"
        }
      },
      "required": [
        "version",
        "model"
      ]
    },
    "premise" : {
      "$comment": "Declaration of Premise parameters",
      "type": "object",
      "properties": {
        "scenarios": {
          "$ref": "#/definitions/scenarios"
        },
        "update": {
          "type": [
            "array",
            "string",
            "null"
          ],
          "default": null
        }
      },
      "required": [
        "scenarios"
      ]
    },
    "model": {
      "$ref": "#/definitions/model"
    },
    "methods": {
      "type": [
        "array",
        "string",
        "null"
      ],
      "default": null
    },
    "normalisation": {
      "type": "boolean",
      "default": true
    },
    "weighting": {
      "type": "boolean",
      "default": true
    }
  },
  "required": [
    "project",
    "ecoinvent",
    "model"
  ],
  "additionalProperties": true
}

